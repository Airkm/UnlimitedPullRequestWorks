# Template file for 'gupnp'
pkgname=gupnp
version=1.1.0
revision=1
build_style=meson
configure_args="-Dintrospection=$(vopt_if gir true false)
 -Dvapi=$(vopt_if vala true false)"
hostmakedepends="pkg-config glib-devel"
makedepends="libglib-devel libxml2-devel libuuid-devel gssdp-devel
 $(vopt_if gir 'gobject-introspection') $(vopt_if vala 'vala-devel')"
short_desc="GObject-based library for UPnP"
maintainer="Juan RP <xtraeme@voidlinux.org>"
license="LGPL-2.1-or-later"
homepage="https://wiki.gnome.org/Projects/GUPnP"
distfiles="${GNOME_SITE}/gupnp/${version%.*}/gupnp-${version}.tar.xz"
checksum=05479fe75e72bdfcb6c9a6aaea15775a1df1cab504e3240de9740894167f3a50

# Package build options
build_options="gir vala"

# Disable gir for cross builds.
if [ -z "$CROSS_BUILD" ]; then
	build_options_default="gir vala"
fi

gupnp-devel_package() {
	depends="libglib-devel libuuid-devel libxml2-devel gssdp-devel
	 gupnp-${version}_${revision}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/bin
		vmove usr/include
		vmove usr/lib/pkgconfig
		vmove "usr/lib/*.so"
		if [ "$build_option_gir" ]; then
			vmove usr/share/gir-1.0
		fi
		if [ "$build_option_vala" ]; then
			vmove usr/share/vala
		fi
	}
}
