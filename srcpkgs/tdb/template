# Template file for 'tdb'
pkgname=tdb
version=1.3.17
revision=1
build_style=configure
configure_args="--prefix=/usr --disable-python"
hostmakedepends="pkg-config python3 libxslt docbook-xsl"
short_desc="Trivial Database similar to GDBM but allows simultaneous commits"
maintainer="Juan RP <xtraeme@voidlinux.org>"
license="GPL-3.0-or-later"
homepage="https://tdb.samba.org/"
distfiles="http://samba.org/ftp/tdb/tdb-${version}.tar.gz"
checksum=1cb4399394c60a773430ca54848359adcf54fb6f136afdcfcbbe62b5f4245614

nocross="see srcpkgs/tdb (cross-32bit.answers)."

pre_configure() {
	# Fix path for calling the WAF binary
	sed -e 's|\.\./\.\./|./|g' -i Makefile
}

tdb-devel_package() {
	depends="libtdb-${version}_${revision}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/pkgconfig
		vmove "usr/lib/*.so"
	}
}
libtdb_package() {
	short_desc="Trivial Database - shared library"
	pkg_install() {
		vmove "usr/lib/*.so.*"
	}
}
