# Template file for 'python-certifi'
pkgname=python-certifi
version=2018.10.15
revision=1
noarch=yes
wrksrc="certifi-${version}"
build_style=python-module
pycompile_module="certifi"
hostmakedepends="python-setuptools python3-setuptools"
depends="python ca-certificates"
short_desc="Python package for using the system's CA Bundle"
maintainer="maxice8 <thinkabit.ukim@gmail.com>"
license="MPL-2.0"
homepage="https://certifi.io/en/latest/"
distfiles="${PYPI_SITE}/c/certifi/certifi-${version}.tar.gz"
checksum=6d58c986d22b038c8c0df30d639f23a3e6d172a05c3583e766f4c0b785c0986a

post_install() {
	rm -f ${DESTDIR}/${py2_sitelib}/certifi/cacert.pem
	rm -f ${DESTDIR}/${py3_sitelib}/certifi/cacert.pem
}

python3-certifi_package() {
	noarch=yes
	pycompile_module="certifi"
	depends="python3 ca-certificates"
	short_desc="${short_desc/Python/Python3}"
	pkg_install() {
		vmove usr/lib/python3*
	}
}
